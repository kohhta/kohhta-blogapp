.conainer
  %ul
    - article.errors. full_messages.each do |message|
      %li= message
  = form_with( model: article,  local: true) do |f|
    %div
      = f.label :eyecatch, 'アイキャッチ/Eyecatch'
    %div
      = f.file_field :eyecatch
    %div
      = f .label :title, 'タイトル/Title'
    %div
      = f .text_field :title,class: 'text'
    %div
      = f .label :title, 'カテゴリー/Category'
    %div
      = f .select :category, Article.categories.map{|k,v|[I18n.t("enum.categories.#{k}"), k] }, {} , {class: 'text'}
    %div
      = f .label :title, '内容/Contents'
    %div
      = f. rich_text_area :content
    %div
      = f. submit '保存/Save' ,class: 'btn-secondary'
